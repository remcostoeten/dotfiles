#!/usr/bin/env bash

source "${HOME}/.config/dotfiles/core/env"
source "${HOME}/.config/dotfiles/core/colors"
source "${HOME}/.config/dotfiles/core/safety"

# Configuration
SECRETS_SYNC_DIR="${HOME}/.secrets-vault"
ENCRYPTED_BACKUP="${SECRETS_SYNC_DIR}/secrets.vault"
SYNC_URL_FILE="${SECRETS_SYNC_DIR}/sync_url"

# Initialize secrets vault
function secrets_sync_init() {
    echo.info "Initializing secrets sync system..."
    
    mkdir -p "$SECRETS_SYNC_DIR"
    chmod 700 "$SECRETS_SYNC_DIR"
    
    if [[ ! -f "$SYNC_URL_FILE" ]]; then
        echo.info "Choose sync method:"
        echo "1) Private GitHub gist (recommended)"
        echo "2) Custom URL (your own server)"
        echo "3) Dropbox/Google Drive path"
        
        read -r -p "Select option (1-3): " choice
        
        case "$choice" in
            1)
                setup_github_gist
                ;;
            2)
                read -r -p "Enter your sync URL: " url
                echo "$url" > "$SYNC_URL_FILE"
                ;;
            3)
                read -r -p "Enter cloud storage path: " path
                echo "file://$path" > "$SYNC_URL_FILE"
                ;;
            *)
                echo.error "Invalid choice"
                return 1
                ;;
        esac
    fi
    
    echo.success "Secrets sync initialized"
}

# Setup GitHub gist for sync
function setup_github_gist() {
    echo.info "Setting up private GitHub gist..."
    
    # Check if gh CLI is available
    if ! command -v gh &>/dev/null; then
        echo.error "GitHub CLI (gh) not found. Install with: sudo apt install gh"
        return 1
    fi
    
    # Check if authenticated
    if ! gh auth status &>/dev/null; then
        echo.error "GitHub CLI not authenticated. Run: gh auth login"
        return 1
    fi
    
    # Search for existing secrets gist first
    echo.info "Checking for existing secrets gist..."
    local existing_gist=$(gh gist list --limit 100 | grep -E "(Encrypted dotfiles secrets|secrets\.vault)" | head -1 | awk '{print $1}' || true)
    
    if [[ -n "$existing_gist" ]]; then
        echo.info "Found existing secrets gist: $existing_gist"
        read -r -p "Use existing gist? [Y/n] " use_existing
        if [[ ! "$use_existing" =~ ^[Nn]$ ]]; then
            local github_user=$(gh api user --jq .login)
            echo "https://gist.githubusercontent.com/${github_user}/${existing_gist}/raw/secrets.vault" > "$SYNC_URL_FILE"
            echo.success "Using existing gist: $existing_gist"
            return 0
        fi
    fi
    
    # Create new private gist
    echo.info "Creating new private gist..."
    local gist_content='{
  "description": "Encrypted dotfiles secrets - DO NOT EDIT MANUALLY",
  "public": false,
  "files": {
    "secrets.vault": {
      "content": "# Encrypted dotfiles secrets\n# This file is managed by dotfiles-secrets-sync\n# Last updated: '$(date)'\n\nplaceholder"
    },
    "README.md": {
      "content": "# Encrypted Dotfiles Secrets\n\nThis gist contains encrypted secrets for dotfiles sync.\n\n**Do not edit manually!**\n\nManaged by: dotfiles-secrets-sync\nLast updated: '$(date)'\n"
    }
  }
}'
    
    local gist_id=$(echo "$gist_content" | gh gist create --private --filename secrets.vault --desc "Encrypted dotfiles secrets" | grep -o '[a-f0-9]\{32\}')
    
    if [[ -n "$gist_id" ]]; then
        local github_user=$(gh api user --jq .login)
        echo "https://gist.githubusercontent.com/${github_user}/${gist_id}/raw/secrets.vault" > "$SYNC_URL_FILE"
        echo.success "GitHub gist created: $gist_id"
        echo.info "Gist URL: https://gist.github.com/${github_user}/${gist_id}"
    else
        echo.error "Failed to create gist"
        return 1
    fi
}

# Encrypt and upload secrets
function secrets_sync_push() {
    echo.info "Encrypting and syncing secrets..."
    
    if [[ ! -f "$DOTFILES_SECRETS_DB" ]]; then
        echo.error "No secrets database found"
        return 1
    fi
    
    if [[ ! -f "$SYNC_URL_FILE" ]]; then
        echo.error "Sync not initialized. Run: dotfiles secrets-sync init"
        return 1
    fi
    
    # Get master password
    read -r -s -p "Enter master password for encryption: " master_pass
    echo
    
    # Create encrypted backup
    tar -czf - -C "$DOTFILES_UTILS" secrets.json .secrets.key .secrets.salt 2>/dev/null | \
    openssl enc -aes-256-cbc -pbkdf2 -iter 100000 -pass "pass:$master_pass" -out "$ENCRYPTED_BACKUP"
    
    # Upload to sync location
    local sync_url=$(cat "$SYNC_URL_FILE")
    
    if [[ "$sync_url" == https://gist.githubusercontent.com/* ]]; then
        # Update GitHub gist
        local gist_id=$(echo "$sync_url" | sed 's|.*github.com/.*/\([^/]*\)/.*|\1|')
        gh gist edit "$gist_id" --add secrets.vault < "$ENCRYPTED_BACKUP"
        echo.success "Secrets pushed to GitHub gist"
    elif [[ "$sync_url" == file://* ]]; then
        # Copy to file location
        local file_path="${sync_url#file://}"
        cp "$ENCRYPTED_BACKUP" "$file_path/secrets.vault"
        echo.success "Secrets pushed to $file_path"
    else
        # Upload via curl
        curl -s -X PUT --data-binary "@$ENCRYPTED_BACKUP" "$sync_url" > /dev/null
        echo.success "Secrets pushed to $sync_url"
    fi
    
    rm -f "$ENCRYPTED_BACKUP"
}

# Download and decrypt secrets
function secrets_sync_pull() {
    echo.info "Downloading and decrypting secrets..."
    
    if [[ ! -f "$SYNC_URL_FILE" ]]; then
        echo.error "Sync not initialized. Run: dotfiles secrets-sync init"
        return 1
    fi
    
    local sync_url=$(cat "$SYNC_URL_FILE")
    
    # Download encrypted backup
    if [[ "$sync_url" == https://gist.githubusercontent.com/* ]]; then
        curl -s "$sync_url" -o "$ENCRYPTED_BACKUP"
    elif [[ "$sync_url" == file://* ]]; then
        local file_path="${sync_url#file://}"
        cp "$file_path/secrets.vault" "$ENCRYPTED_BACKUP"
    else
        curl -s "$sync_url" -o "$ENCRYPTED_BACKUP"
    fi
    
    if [[ ! -f "$ENCRYPTED_BACKUP" ]] || [[ ! -s "$ENCRYPTED_BACKUP" ]]; then
        echo.error "Failed to download secrets or file is empty"
        return 1
    fi
    
    # Get master password
    read -r -s -p "Enter master password for decryption: " master_pass
    echo
    
    # Create backup of current secrets
    if [[ -f "$DOTFILES_SECRETS_DB" ]]; then
        cp "$DOTFILES_SECRETS_DB" "${DOTFILES_SECRETS_DB}.backup.$(date +%s)"
        echo.info "Current secrets backed up"
    fi
    
    # Decrypt and extract
    if openssl enc -aes-256-cbc -d -pbkdf2 -iter 100000 -pass "pass:$master_pass" -in "$ENCRYPTED_BACKUP" | \
       tar -xzf - -C "$DOTFILES_UTILS" 2>/dev/null; then
        echo.success "Secrets successfully restored"
        echo.info "Run 'dotfiles secrets list' to verify"
    else
        echo.error "Failed to decrypt secrets. Wrong password?"
        return 1
    fi
    
    rm -f "$ENCRYPTED_BACKUP"
}

# Auto-sync on dotfiles operations
function secrets_sync_auto() {
    if [[ -f "$SYNC_URL_FILE" ]] && [[ "${DOTFILES_AUTO_SYNC:-0}" == "1" ]]; then
        echo.info "Auto-syncing secrets..."
        secrets_sync_push
    fi
}

# Main function
function main() {
    local command="$1"
    shift
    
    case "$command" in
        "init")
            secrets_sync_init
            ;;
        "push"|"upload")
            secrets_sync_push
            ;;
        "pull"|"download")
            secrets_sync_pull
            ;;
        "auto")
            secrets_sync_auto
            ;;
        "status")
            if [[ -f "$SYNC_URL_FILE" ]]; then
                echo.success "Sync configured: $(cat "$SYNC_URL_FILE")"
            else
                echo.warning "Sync not configured"
            fi
            ;;
        "help"|"--help"|"-h"|"")
            echo.header "Dotfiles Secrets Sync"
            echo
            echo.info "Usage: dotfiles secrets-sync <command>"
            echo
            echo.info "Commands:"
            echo.cyan "  init" | tr '\n' ' '
            echo "       - Initialize sync system"
            echo.cyan "  push" | tr '\n' ' '
            echo "       - Encrypt and upload secrets"
            echo.cyan "  pull" | tr '\n' ' '
            echo "       - Download and decrypt secrets"
            echo.cyan "  status" | tr '\n' ' '
            echo "       - Show sync configuration"
            echo.cyan "  help" | tr '\n' ' '
            echo "       - Show this help"
            echo
            echo.info "Setup:"
            echo "1. Run 'dotfiles secrets-sync init' on your main machine"
            echo "2. Run 'dotfiles secrets-sync push' to upload secrets"
            echo "3. On new machine: clone dotfiles, then 'dotfiles secrets-sync pull'"
            echo
            echo.info "Auto-sync:"
            echo "Set DOTFILES_AUTO_SYNC=1 in your environment for automatic syncing"
            ;;
        *)
            echo.error "Unknown command: $command"
            echo.info "Run 'dotfiles secrets-sync help' for usage"
            return 1
            ;;
    esac
}

main "$@"
