#!/usr/bin/env bash
set -e

# Follow symlinks to find the real dotfiles directory
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
  DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
DOTFILES_DIR="$(cd "$DIR/.." && pwd)"

"$DOTFILES_DIR/scripts/screen" "$@"
