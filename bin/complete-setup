#!/usr/bin/env bash

source "${HOME}/.config/dotfiles/core/env"
source "${HOME}/.config/dotfiles/core/colors"
source "${HOME}/.config/dotfiles/core/safety"

function complete_setup() {
    echo.header "üöÄ Completing Aesthetic Terminal Setup"
    
    echo.info "Current shell: $SHELL"
    echo.info "Target shell: ZSH"
    
    # Ensure ZSH is installed
    if ! command -v zsh &>/dev/null; then
        echo.error "ZSH not found. Please install it first."
        return 1
    fi
    
    # Show current symlinks
    echo.info "Active symlinks:"
    dotfiles-link list
    
    echo.info "System status:"
    dotfiles version
    
    echo.success "‚úÖ Aesthetic terminal setup complete!"
    echo
    echo.cyan "üé® Features enabled:"
    echo "  ‚Ä¢ Starship prompt with beautiful colors"
    echo "  ‚Ä¢ ZSH with fish-like autosuggestions"
    echo "  ‚Ä¢ Syntax highlighting"
    echo "  ‚Ä¢ Enhanced ls (eza) with icons"
    echo "  ‚Ä¢ Modern cat (bat) with syntax highlighting"
    echo "  ‚Ä¢ Smart directory jumping (zoxide)"
    echo "  ‚Ä¢ Fuzzy finder (fzf) integration"
    echo "  ‚Ä¢ Beautiful git commands"
    echo "  ‚Ä¢ Neofetch system info"
    echo
    echo.yellow "üöÄ Next steps:"
    echo "  1. Close this terminal"
    echo "  2. Open a new terminal"
    echo "  3. Enjoy your aesthetic ricer terminal!"
    echo
    echo.rainbow "Welcome to the Matrix! üï∂Ô∏è"
    echo
}

complete_setup "$@"
