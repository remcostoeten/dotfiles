#!/bin/bash
# License Generator - Executable wrapper
# This script serves as the main entry point for the license generator

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SCRIPTS_DIR="$(dirname "$SCRIPT_DIR")/scripts"

# Check if the Python script exists
if [ ! -f "$SCRIPTS_DIR/license-generator.py" ]; then
    echo "Error: license-generator.py not found in $SCRIPTS_DIR"
    exit 1
fi

# Check if Python 3 is available
if ! command -v python3 &> /dev/null; then
    echo "Error: Python 3 is required but not installed."
    exit 1
fi

# Run the Python script with all arguments passed through
python3 "$SCRIPTS_DIR/license-generator.py" "$@"