    echo "${COLOR_BRIGHT_CYAN}║${COLOR_RESET}   ${COLOR_BLUE}██╔══██╗██╔═══██╗╚══██╔══╝██╔════╝██║██║     ██╔════╝${COLOR_RESET}   ${COLOR_BRIGHT_CYAN}║${COLOR_RESET}"
    echo "${COLOR_BRIGHT_CYAN}║${COLOR_RESET}   ${COLOR_CYAN}██║  ██║██║   ██║   ██║   █████╗  ██║██║     █████╗${COLOR_RESET}     ${COLOR_BRIGHT_CYAN}║${COLOR_RESET}"
    echo "${COLOR_BRIGHT_CYAN}║${COLOR_RESET}   ${COLOR_GREEN}██║  ██║██║   ██║   ██║   ██╔══╝  ██║██║     ██╔══╝${COLOR_RESET}     ${COLOR_BRIGHT_CYAN}║${COLOR_RESET}"
    echo "${COLOR_BRIGHT_CYAN}║${COLOR_RESET}   ${COLOR_BRIGHT_GREEN}██████╔╝╚██████╔╝   ██║   ██║     ██║███████╗███████╗${COLOR_RESET}   ${COLOR_BRIGHT_CYAN}║${COLOR_RESET}"
