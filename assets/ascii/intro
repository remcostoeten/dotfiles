function echo.dotfiles_banner() {
    # Prevent duplicate banner display
    [[ -n "$DOTFILES_BANNER_SHOWN" ]] && return 0
    export DOTFILES_BANNER_SHOWN=1
    
    # Gruvbox-inspired colors for aesthetic appeal (using 256-color codes)
    local orange='\033[38;5;208m'        # Gruvbox orange
    local aqua='\033[38;5;108m'          # Gruvbox aqua  
    local bright_yellow='\033[38;5;214m' # Gruvbox yellow
    local bright_green='\033[38;5;142m'  # Gruvbox green
    local bright_blue='\033[38;5;109m'   # Gruvbox blue
    local bright_red='\033[38;5;167m'    # Gruvbox red
    local dim='\033[2;37m'               # Dimmed text
    local bright_fg='\033[38;5;223m'     # Gruvbox foreground
    
    # Modern aesthetic banner with Gruvbox colors matching Starship
    echo
    echo -e "${aqua}â•­â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®${NC}"
    echo -e "${aqua}â”‚${NC}                                                                 ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}    ${orange}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  ${bright_yellow}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—${NC} ${bright_green}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—${NC}${bright_blue}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—${NC}${PURPLE}â–ˆâ–ˆâ•—${NC}${bright_red}â–ˆâ–ˆâ•—     ${NC}${aqua}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—${NC}   ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}    ${orange}â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—${NC}${bright_yellow}â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•—${NC}${bright_green}â•šâ•â•â–ˆâ–ˆâ•”â•â•â•${NC}${bright_blue}â–ˆâ–ˆâ•”â•â•â•â•â•${NC}${PURPLE}â–ˆâ–ˆâ•‘${NC}${bright_red}â–ˆâ–ˆâ•‘     ${NC}${aqua}â–ˆâ–ˆâ•”â•â•â•â•â•${NC}   ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}    ${orange}â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘${NC}${bright_yellow}â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘${NC}${bright_green}   â–ˆâ–ˆâ•‘   ${NC}${bright_blue}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  ${NC}${PURPLE}â–ˆâ–ˆâ•‘${NC}${bright_red}â–ˆâ–ˆâ•‘     ${NC}${aqua}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—${NC}     ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}    ${orange}â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘${NC}${bright_yellow}â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘${NC}${bright_green}   â–ˆâ–ˆâ•‘   ${NC}${bright_blue}â–ˆâ–ˆâ•”â•â•â•  ${NC}${PURPLE}â–ˆâ–ˆâ•‘${NC}${bright_red}â–ˆâ–ˆâ•‘     ${NC}${aqua}â–ˆâ–ˆâ•”â•â•â•${NC}     ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}    ${orange}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•${NC}${bright_yellow}â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•${NC}${bright_green}   â–ˆâ–ˆâ•‘   ${NC}${bright_blue}â–ˆâ–ˆâ•‘     ${NC}${PURPLE}â–ˆâ–ˆâ•‘${NC}${bright_red}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—${NC}${aqua}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—${NC}   ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}    ${dim}â•šâ•â•â•â•â•â•  â•šâ•â•â•â•â•â•    â•šâ•â•   â•šâ•â•     â•šâ•â•â•šâ•â•â•â•â•â•â•â•šâ•â•â•â•â•â•â•${NC}   ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}                                                                 ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}           ${bright_fg}âœ¨ Terminal Configuration Framework âœ¨${NC}            ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}                                                                 ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}        ${PURPLE}ğŸš€ Aesthetic${NC} ${orange}â€¢${NC} ${YELLOW}Modular${NC} ${orange}â€¢${NC} ${GREEN}ZSH-First${NC} ${orange}â€¢${NC} ${BLUE}Modern${NC}         ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}                                                                 ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}                    ${PURPLE}Version ${DOTFILES_VERSION:-'unknown'}${NC} ${orange}â”‚${NC} ${bright_yellow}$(date +'%H:%M')${NC}                     ${aqua}â”‚${NC}"
    echo -e "${aqua}â”‚${NC}                                                                 ${aqua}â”‚${NC}"
    echo -e "${aqua}â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯${NC}"
    echo
    # Quick status indicators with modern styling
    echo -e "${dim}â–Œ${NC}${bright_fg} Shell: ${CYAN}${SHELL##*/}${NC} ${dim}â–Œ${NC}${bright_fg} OS: ${GREEN}$(uname -s)${NC} ${dim}â–Œ${NC}${bright_fg} User: ${PURPLE}$USER${NC} ${dim}â–Œ${NC}"
    echo
}

# Source pastel banner functions
if [[ -f "${DOTFILES_ROOT:-$HOME/.config/dotfiles}/assets/ascii/pastel" ]]; then
    source "${DOTFILES_ROOT:-$HOME/.config/dotfiles}/assets/ascii/pastel"
fi

# Add alias for convenience
alias e.banner='echo.dotfiles_banner'
