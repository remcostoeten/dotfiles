function echo.dotfiles_banner() {
    echo
    echo "${COLOR_BRIGHT_CYAN}╔═══════════════════════════════════════════════════════════╗${COLOR_RESET}"
    echo "${COLOR_BRIGHT_CYAN}║${COLOR_RESET}                                                           ${COLOR_BRIGHT_CYAN}║${COLOR_RESET}"
