    echo -e "\033[38;2;255;133;150mâ”‚\033[0m                                                        \033[38;2;255;133;150mâ”‚\033[0m"
    echo -e "\033[38;2;255;133;150mâ”‚\033[0m  \033[38;2;173;218;120mğŸŒªï¸  Fan Control System\033[0m  \033[38;2;209;159;222mv$VERSION\033[0m           \033[38;2;255;133;150mâ”‚\033[0m"
    echo -e "\033[38;2;255;133;150mâ”‚\033[0m  \033[38;2;133;218;224mAesthetic â€¢ Modern â€¢ Powerful\033[0m                  \033[38;2;255;133;150mâ”‚\033[0m"
    echo -e "\033[38;2;255;133;150mâ”‚\033[0m                                                        \033[38;2;255;133;150mâ”‚\033[0m"
    echo -e "\033[38;2;255;133;150mâ•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯\033[0m"
    echo
}

# Initialize hardware detection
function init_hardware() {
    # Detect NCT6798 for CPU fans
    for device in "$HWMON_PATH"/hwmon*; do
        if [[ -f "$device/name" ]] && grep -q "nct6798" "$device/name" 2>/dev/null; then
            NCT6798_DEVICE="$device"
            break
        fi
    done
    
    # Load CPU fan data
    if [[ -n "$NCT6798_DEVICE" ]]; then
        for i in {1..7}; do
            local fan_file="$NCT6798_DEVICE/fan${i}_input"
            local pwm_file="$NCT6798_DEVICE/pwm${i}"
            
            if [[ -f "$fan_file" ]] && [[ -f "$pwm_file" ]]; then
                local rpm=$(cat "$fan_file" 2>/dev/null || echo "0")
                local pwm=$(cat "$pwm_file" 2>/dev/null || echo "0")
                
                if [[ $rpm -gt 0 ]]; then
                    CPU_FANS["$i"]="$rpm"
                    CPU_PWM_PATHS["$i"]="$pwm_file"
                    CPU_FAN_SPEEDS["$i"]=$((pwm * 100 / 255))
                fi
            fi
        done
    fi
    
    # Load GPU fan data
    if command -v nvidia-smi >/dev/null; then
        local gpu_info
        if gpu_info=$(nvidia-smi --query-gpu=name,fan.speed,temperature.gpu --format=csv,noheader,nounits 2>/dev/null); then
            local gpu_name=$(echo "$gpu_info" | cut -d',' -f1 | xargs)
            local fan_speed=$(echo "$gpu_info" | cut -d',' -f2 | xargs)
            local temp=$(echo "$gpu_info" | cut -d',' -f3 | xargs)
            
            GPU_FANS["name"]="$gpu_name"
            GPU_FAN_SPEEDS["speed"]="$fan_speed"
            GPU_FANS["temp"]="$temp"
        fi
    fi
}

# Display current metrics with beautiful formatting
function show_metrics() {
    echo.pastel_purple "â•­â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®"
    echo.pastel_purple "â”‚                    ğŸ”§ Current Fan Status                    â”‚"
    echo.pastel_purple "â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤"
    echo.pastel_purple "â”‚                                                             â”‚"
    
    # CPU Fans Section
    echo.pastel_blue "â”‚  ğŸ’¨ CPU Fans:                                               â”‚"
    echo.pastel_purple "â”‚                                                             â”‚"
    
    local cpu_fan_count=0
    for fan_id in "${!CPU_FANS[@]}"; do
        local rpm="${CPU_FANS[$fan_id]}"
        local speed="${CPU_FAN_SPEEDS[$fan_id]}"
        local status="ğŸŸ¢ Active"
        
        if [[ $rpm -eq 0 ]]; then
            status="ğŸ”´ Stopped"
        elif [[ $rpm -lt 500 ]]; then
            status="ğŸŸ¡ Low"
        fi
        
        printf "\033[38;2;209;159;222mâ”‚\033[0m    \033[38;2;133;218;224mFan %s:\033[0m %-8s \033[38;2;173;218;120m%3s%%\033[0m \033[38;2;255;211;146m%4d RPM\033[0m %s     \033[38;2;209;159;222mâ”‚\033[0m\n" \
            "$fan_id" "$status" "$speed" "$rpm" ""
        ((cpu_fan_count++))
    done
    
    if [[ $cpu_fan_count -eq 0 ]]; then
        echo.pastel_purple "â”‚    ğŸš« No active CPU fans detected                           â”‚"
    fi
    
    echo.pastel_purple "â”‚                                                             â”‚"
    
    # GPU Fans Section
    echo.pastel_blue "â”‚  ğŸ® GPU Fans:                                               â”‚"
    echo.pastel_purple "â”‚                                                             â”‚"
    
    if [[ -n "${GPU_FANS[name]:-}" ]]; then
        local gpu_name="${GPU_FANS[name]}"
        local gpu_speed="${GPU_FAN_SPEEDS[speed]}"
        local gpu_temp="${GPU_FANS[temp]}"
        
        # Truncate GPU name if too long
        if [[ ${#gpu_name} -gt 25 ]]; then
            gpu_name="${gpu_name:0:22}..."
        fi
        
        local temp_status="ğŸŸ¢"
        if [[ $gpu_temp -gt 75 ]]; then
            temp_status="ğŸ”´"
        elif [[ $gpu_temp -gt 65 ]]; then
            temp_status="ğŸŸ¡"
        fi
        
        printf "\033[38;2;209;159;222mâ”‚\033[0m    \033[38;2;133;218;224m%-25s\033[0m \033[38;2;173;218;120m%3s%%\033[0m \033[38;2;255;211;146m%2sÂ°C\033[0m %s         \033[38;2;209;159;222mâ”‚\033[0m\n" \
            "$gpu_name" "$gpu_speed" "$gpu_temp" "$temp_status"
    else
        echo.pastel_purple "â”‚    ğŸš« No GPU detected or nvidia-smi not available          â”‚"
    fi
    
    echo.pastel_purple "â”‚                                                             â”‚"
    echo.pastel_purple "â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯"
