	autostash = true

[push]
	default = simple
	autoSetupRemote = true

[credential]
	helper = cache --timeout=3600

[fetch]
	prune = true
	tags = true

[rebase]
	autostash = true
	abbreviateCommands = true

[rerere]
	enabled = true

[status]
	showUntrackedFiles = all
	branch = true
	showStash = true

[log]
	date = relative
	abbrevCommit = true

[branch]
	autoSetupMerge = always

[init]
	defaultBranch = master

[gc]
