# Font
font-family = JetBrainsMono Nerd Font
font-size = 16 

# Catppuccin Mocha colors
background = #1e1e2e
foreground = #cdd6f4
selection-background = #f5e0dc
selection-foreground = #1e1e2e
cursor-color = #f38ba8
palette = [
  #45475a, #f38ba8, #a6e3a1, #f9e2af,
