# Window
window-padding-x = 8
window-padding-y = 8
window-border-width = 1
window-border-color-active = #89b4fa
window-border-color-inactive = #313244

# Keybindings
keybind = ctrl+space, split:horizontal
keybind = ctrl+shift+space, split:vertical
keybind = ctrl+w, close-pane
keybind = ctrl+h, focus-pane:left
keybind = ctrl+l, focus-pane:right
keybind = ctrl+k, focus-pane:up
keybind = ctrl+j, focus-pane:down

# Resize panes
keybind = ctrl+left, resize-pane:left
keybind = ctrl+right, resize-pane:right
keybind = ctrl+up, resize-pane:up
keybind = ctrl+down, resize-pane:down

