{
  "window.commandCenter": true,
  "workbench.settings.openDefaultKeybindings": true,
  "editor.fontSize": 16,
  // "editor.fontFamily": "Hack Nerd Font Mono",
  // "editor.fontFamily": "Inter Mono",
  // "editor.fontFamily": "Roboto Mono",
    "editor.fontFamily": "IBM  Plex mono",      
  // "editor.fontFamily": "Source code Pr",   
  // "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "editor.letterSpacing": 1.49,
  "editor.lineHeight": 1.75,
  "typescript.tsserver.maxTsServerMemory": 4000,
  "git.enableSmartCommit": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "workbench.sideBar.location": "right",
  "roo-cline.allowedCommands": [
    "git log",
    "git diff",
    "git show",
    "find apps/notr -name \"use-api.ts\" -o -name \"useApi.ts\"",
    "find",
    "xargs grep",
    "xargs",
    "xargs grep -l \"export.*useApi\\|export.*use-api\" 2 > /dev/null",
    "find apps/notr -type f -name \"*.ts\" -o -name \"*.tsx\"",
    "ls apps/notr/src/hooks/",
    "ls",
    "grep -r \"useApi\" apps/notr/src/ --include=\"*.ts\" --include=\"*.tsx\"",
    "head",
    "grep",
    "head -5",
    "cd apps/notr",
    "npx tsc --noEmit",
    "cd",
    "npx tsc",
    "npx",
    "bun run dev",
    "bun",
    "bun run"
  ],
  "roo-cline.deniedCommands": [],
  "workbench.colorTheme": "Best Themes - Blueberry Banana",
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
    "Cargo.toml": "Cargo.lock",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "explorer.confirmDelete": false,
  "cursor.agent_layout_browser_beta_setting": true,
  "cursor.composer.cmdPFilePicker2": true,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.cpp.enablePartialAccepts": true,
  "cursor.enable_git_worktrees_setting": true,
  "cursor.general.enableShadowWorkspace": true,
  "cursor.general.gitGraphIndexing": "enabled",
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "files.autoSave": "onFocusChange",
  "terminal.external.linuxExec": "kitty",
  "terminal.external.osxExec": "kitty",
  "update.releaseTrack": "dev",
  "editor.inlineSuggest.edits.showCollapsed": true,
  "cursor.cpp.disabledLanguages": [
    "plaintext"
  ],
  "window.menuBarVisibility": "compact",
  "git.openRepositoryInParentFolders": "always",
  "terminal.integrated.fontFamily": "monospace",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "update.mode": "silentlyApplyOnQuit",
  "claudeCode.preferredLocation": "panel",
}