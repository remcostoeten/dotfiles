{
  "name": "modern-setup",
  "version": "1.0.0",
  "type": "module",
  "description": "Modern interactive setup script using OpenTUI",
  "main": "src/index.tsx",
  "scripts": {
    "dev": "bun run src/index.tsx",
    "start": "bun run src/main.tsx",
    "setup": "bun run src/main.tsx",
    "cli": "bun run cli-setup.ts",
    "manager": "bun run cli-manager.ts",
    "interactive": "bun run interactive-setup.ts",
    "live": "bun run src/setup-live.tsx",
    "demo": "bun run src/index.tsx",
    "build": "bun build src/main.tsx --outdir dist --target bun",
    "build:demo": "bun build src/index.tsx --outdir dist --target bun",
    "build:live": "bun build src/setup-live.tsx --outdir dist --target bun"
  },
  "dependencies": {
    "@opentui/core": "^0.1.34",
    "@opentui/react": "^0.1.34",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.26",
    "bun-types": "^1.3.1",
    "typescript": "^5.9.3"
  }
}
